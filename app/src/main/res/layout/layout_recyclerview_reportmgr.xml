<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_reportMgr">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageViewPicReportMgr" />

        <TextView
            android:text="This is title of report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewPicReportMgr"
            android:layout_toEndOf="@+id/imageViewPicReportMgr"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:id="@+id/textViewTitleReportMgr"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="8dp" />

        <TextView
            android:text="This is description or Report This is description or Report This is description or Report This is description or Report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_below="@+id/textViewTitleReportMgr"
            android:layout_alignLeft="@+id/textViewTitleReportMgr"
            android:layout_alignStart="@+id/textViewTitleReportMgr"
            android:id="@+id/textViewDescReportMgr" />

        <TextView
            android:text="hh:mm:ss dd/MM/yyyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTimeReportMgr"
            android:textStyle="normal|italic"
            android:layout_below="@+id/imageViewPicReportMgr"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_comment"
            android:layout_below="@+id/imageViewPicReportMgr"
            android:layout_toRightOf="@+id/textViewTimeReportMgr"
            android:layout_toEndOf="@+id/textViewTimeReportMgr"
            android:id="@+id/imageViewCommentReportMgr"
            android:layout_marginLeft="16dp" />

        <TextView
            android:text="999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewTimeReportMgr"
            android:layout_toRightOf="@+id/imageViewCommentReportMgr"
            android:layout_toEndOf="@+id/imageViewCommentReportMgr"
            android:id="@+id/textViewCommentReportMgr"
            android:textStyle="normal|italic"
            android:layout_marginLeft="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_rate"
            android:layout_below="@+id/imageViewPicReportMgr"
            android:layout_toRightOf="@+id/textViewCommentReportMgr"
            android:layout_toEndOf="@+id/textViewCommentReportMgr"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:id="@+id/imageViewRateReportMgr" />

        <TextView
            android:text="999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewCommentReportMgr"
            android:layout_toRightOf="@+id/imageViewRateReportMgr"
            android:layout_toEndOf="@+id/imageViewRateReportMgr"
            android:id="@+id/textViewRateReportMgr"
            android:textStyle="normal|italic"
            android:layout_marginLeft="2dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>